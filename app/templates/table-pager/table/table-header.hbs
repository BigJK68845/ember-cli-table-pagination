<thead>
<tr role="row">
    {{#each columns as |item|}}
        <th role="columnheader" tabindex="0" rowspan="1" colspan="1">
            {{item.displayName}} <i {{action "sortField" item.fieldName}} class="fa fa-sort"></i>
        </th>
    {{/each}}

    <th role="columnheader" tabindex="0" rowspan="1" colspan="1">

    </th>
</tr>
</thead>

<tfoot>
<tr>
    {{#each columns as |item|}}
        <th rowspan="1" colspan="1">
            {{item.displayName}}
        </th>
    {{/each}}
    <th rowspan="1" colspan="1">Actions</th>
</tr>
</tfoot>