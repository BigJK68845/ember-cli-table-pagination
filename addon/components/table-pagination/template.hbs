{{#if tableTitle}}
  {{#component titleComponent}}
    {{tableTitle}}
  {{/component}}
{{/if}}
{{#component bodyComponent}}
    {{#component toolbarComponent}}
      {{component toolsComponent
        allowQuickSearch=allowQuickSearch
        searchString=searchString
        perPage=perPage
      }}
      {{!-- pages --}}
      {{component pagerComponent
        count=totalPages
        current=page
      }}
      {{!-- TODO add change action handling--}}
    {{/component}}
    {{#component contentComponent contentParams=contentParams}}
      {{#each currentContent as |item|}}
        {{yield item}}
      {{/each}}
    {{/component}}
{{/component}}
