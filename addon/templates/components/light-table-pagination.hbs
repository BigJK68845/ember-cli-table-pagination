{{#if tableTitle}}
  {{#component titleComponent
  titleParams=titleParams
  contentParams=contentParams
  allowQuickSearch=allowQuickSearch}}
    {{tableTitle}}
  {{/component}}
{{/if}}

{{#component bodyComponent}}
  {{#component toolbarComponent}}
    {{#if isRemoteHandled}}
      {{component toolsComponent
      allowQuickSearch=allowQuickSearch
      searchString=searchString
      totalRecords=numberOfRecords
      perPage=perPage
      toolsParams=toolsParams
      refresh=(action this.attrs.refresh)
      runQuickSearch=(action this.attrs.runQuickSearch)
      changePerPage=(action this.attrs.changePerPage)
      changeSort=(action this.actions.changeSort)}}

      {{component pagerComponent
      count=totalPages
      current=page
      changePage=(action this.attrs.changePage)
      pagerParams=pagerParams}}
    {{else}}
      {{component toolsComponent
      allowQuickSearch=allowQuickSearch
      searchString=searchString
      perPage=perPage
      changePerPage=(action 'doNothing')
      refresh=(action 'doNothing')
      runQuickSearch=(action 'doNothing')}}

      {{component pagerComponent
      count=totalPages
      current=page
      changePage=(action 'doNothing')}}
    {{/if}}
  {{/component}}

  {{#if loading}}
  <div class='table-loading-overlay container'>
    <div class='table-loading-inner row'>
      <div class='vertical-center col-xs-12'>
        <div class='text-center col-xs-12'>
          <i class="fa fa-cog fa-spin fa-3x"></i>
        </div>
      </div>
    </div>
  </div>
  {{/if}}


  {{#light-table table
    height=height
    tableClassNames='table table-bordered table-striped'
    responsive=true
    breakpoints=(hash
      mobile=3
      tablet=5
      desktop=10
      jumbo=20
    )
    tableActions=(hash
      linkPath=linkPath
      editPath=editPath
      deleteAction=deleteAction
    )
    as |t|}}

    {{t.head
      onColumnClick=(action 'onColumnClick')
      onColumnDoubleClick=(action 'onColumnDoubleClick')
      iconAscending='fa fa-sort-asc'
      iconDescending='fa fa-sort-desc'
      fixed=true
      }}

      {{#t.body
        onScrolledToBottom=(action 'onScrolledToBottom')
        canSelect=false
        rowComponent=rowComponent
        as |body|}}

      {{#body.expanded-row as |row|}}
        Expanded row
      {{/body.expanded-row}}

      {{#if isLoading}}
        {{#body.loader}}
        <p class="text-center">
          <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
          <span class="sr-only">Loading...</span>
        </p>
        {{/body.loader}}
      {{/if}}

      {{#if table.isEmpty}}
      {{#body.no-data}}
        {{component noDataComponent noDataParams=noDataParams}}
      {{/body.no-data}}
      {{/if}}

    {{/t.body}}

    {{t.foot fixed=true}}
  {{/light-table}}

  {{component footerComponent
  perPage=perPage
  page=page
  totalPages=totalPages
  totalRecords=numberOfRecords
  changePage=(action this.attrs.changePage)
  }}
{{/component}}
